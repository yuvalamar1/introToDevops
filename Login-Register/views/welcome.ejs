<!-- welcome.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome</title>
  <style>
    body {
      background-color: #f2f2f2;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .welcome-container {
      width: 300px;
      padding: 30px;
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .welcome-container h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .welcome-container p {
      font-size: 16px;
      color: #777;
    }

    .welcome-container ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .welcome-container li {
      margin-bottom: 10px;
      color: #555;
    }
  </style>
</head>
<body>
  <div class="welcome-container">
    <h2>Welcome <%= user.email %></h2>
    <p>Grades:</p>
    <ul>
      <li>Grade 1: <%= user.grade1 %></li>
      <li>Grade 2: <%= user.grade2 %></li>
      <li>Grade 3: <%= user.grade3 %></li>
    </ul>
    <p>Average Grade: <%= (parseInt(user.grade1) + parseInt(user.grade2) + parseInt(user.grade3)) / 3 %></p>
  </div>
</body>
</html>
